<package type="module" section="frontend">
	<name>mod_menu</name>
	<title>Menu</title>
	<created>2019-03-11 16:49:00</created>
	<author>Elxis Team</author>
	<authoremail>info@elxis.org</authoremail>
	<authorurl>http://www.elxis.org</authorurl>
